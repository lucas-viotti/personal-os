<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.logbook.enrichment.weekly</string>
    
    <key>ProgramArguments</key>
    <array>
        <string>/usr/bin/python3</string>
        <string>SCRIPT_PATH/slack-enrichment.py</string>
        <string>--mode</string>
        <string>weekly</string>
    </array>
    
    <key>WorkingDirectory</key>
    <string>SCRIPT_PATH</string>
    
    <key>StartCalendarInterval</key>
    <dict>
        <!-- Run at 3:02 PM on Fridays (2 min after GitHub Action) -->
        <key>Weekday</key>
        <integer>5</integer>
        <key>Hour</key>
        <integer>15</integer>
        <key>Minute</key>
        <integer>2</integer>
    </dict>
    
    <key>StandardOutPath</key>
    <string>/tmp/logbook-enrichment-weekly.log</string>
    
    <key>StandardErrorPath</key>
    <string>/tmp/logbook-enrichment-weekly.error.log</string>
    
    <key>EnvironmentVariables</key>
    <dict>
        <key>PATH</key>
        <string>/usr/local/bin:/usr/bin:/bin</string>
    </dict>
</dict>
</plist>

